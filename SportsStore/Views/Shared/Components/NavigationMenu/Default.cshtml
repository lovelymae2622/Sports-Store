@model IEnumerable<string>

<div class="d-grid gap-2 mb-4">
    <a class="btn btn-outline-primary @(ViewBag.SelectedCategory == null ? "active" : "")"
       asp-action="List"
       asp-controller="Product"
       asp-route-category="">
        Home
    </a>

    @foreach (string category in Model)
    {
        <a class="btn btn-outline-primary @(category == ViewBag.SelectedCategory ? "active" : "")"
           asp-action="List"
           asp-controller="Product"
           asp-route-category="@category"
           asp-route-productPage="1">
            @category
        </a>
    }
</div>