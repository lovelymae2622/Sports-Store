@model Order

<div class="container py-5">
    <h2 class="mb-4">Check out now</h2>
    <p class="lead mb-4">Please enter your details, and we'll ship your goods right away!</p>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Checkout" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-4"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="mb-3">Ship to</h4>
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Name:</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Line1" class="form-label">Address Line 1:</label>
                                    <input asp-for="Line1" class="form-control" />
                                    <span asp-validation-for="Line1" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Line2" class="form-label">Address Line 2:</label>
                                    <input asp-for="Line2" class="form-control" />
                                    <span asp-validation-for="Line2" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">City:</label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4 class="mb-3">Additional Information</h4>
                                <div class="mb-3">
                                    <label asp-for="Province" class="form-label">Province:</label>
                                    <input asp-for="Province" class="form-control" />
                                    <span asp-validation-for="Province" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Zip" class="form-label">Postal Code:</label>
                                    <input asp-for="Zip" class="form-control" />
                                    <span asp-validation-for="Zip" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Country" class="form-label">Country:</label>
                                    <select asp-for="Country" asp-items="ViewBag.Countries" class="form-select">
                                    </select>
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="form-check mb-3 mt-4">
                                    <input asp-for="GiftWrap" class="form-check-input" />
                                    <label asp-for="GiftWrap" class="form-check-label">Gift wrap these items</label>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-primary btn-lg" type="submit">Complete Order</button>
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">Back to Cart</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>